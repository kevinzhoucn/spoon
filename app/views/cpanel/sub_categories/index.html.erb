<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to 'Show', cpanel_sub_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_cpanel_sub_category_path(category) %></td>
        <td><%= link_to 'Destroy', cpanel_sub_categories_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

